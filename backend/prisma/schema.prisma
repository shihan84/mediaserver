// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  OPERATOR
  VIEWER
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
  CANCELLED
}

enum Scte35Type {
  SPLICE_INSERT
  TIME_SIGNAL
  SPLICE_NULL
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  username     String    @unique
  passwordHash String
  role         UserRole  @default(VIEWER)
  isActive     Boolean   @default(true)
  lastLogin    DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  auditLogs    AuditLog[]
  chatMessages ChatMessage[]
  tasks        Task[]
  schedules    Schedule[]

  @@index([email])
  @@index([role])
}

model AuditLog {
  id         String   @id @default(uuid())
  userId     String
  action     String
  resource   String
  resourceId String?
  details    Json?
  ipAddress  String?
  userAgent  String?
  timestamp  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([timestamp])
  @@index([resource, resourceId])
}

model ChatMessage {
  id        String   @id @default(uuid())
  userId    String
  message   String
  response  String?
  context   Json?
  timestamp DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([timestamp])
}

model Task {
  id          String     @id @default(uuid())
  userId      String
  type        String
  status      TaskStatus @default(PENDING)
  progress    Int        @default(0)
  message     String?
  metadata    Json?
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([type])
  @@index([createdAt])
}

model Scte35Marker {
  id             String        @id @default(uuid())
  name           String
  type           Scte35Type
  cueOut         Boolean       @default(false)
  cueIn          Boolean       @default(false)
  timeSignal     Boolean       @default(false)
  spliceId       Int?
  programId      Int?
  duration       Int?
  outOfNetwork   Boolean       @default(false)
  autoReturn     Boolean       @default(false)
  breakDuration  Int?
  availNum       Int?
  availsExpected Int?
  metadata       Json?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  distributors   Distributor[]

  @@index([type])
  @@index([createdAt])
}

model Channel {
  id                 String   @id @default(uuid())
  name               String   @unique
  description        String?
  streamKey          String   @unique
  isActive           Boolean  @default(true)
  config             Json?
  metadata           Json?
  vodFallbackEnabled Boolean  @default(false)
  vodFallbackFiles   Json? // Array of VOD file paths/URLs
  vodFallbackDelay   Int?     @default(5) // Seconds to wait before fallback
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  schedules    Schedule[]
  distributors Distributor[]

  @@index([name])
  @@index([isActive])
}

model Distributor {
  id              String          @id @default(uuid())
  channelId       String
  name            String
  type            DistributorType // HLS_MPD or SRT
  hlsUrl          String? // HLS/LLHLS playback URL
  mpdUrl          String? // DASH MPD URL
  srtEndpoint     String? // SRT endpoint URL
  srtStreamKey    String? // SRT stream key
  scte35Enabled   Boolean         @default(true)
  prerollMarkerId String? // SCTE-35 preroll marker ID
  autoPreroll     Boolean         @default(false) // Auto-insert preroll on stream start
  isActive        Boolean         @default(true)
  config          Json? // Additional distributor-specific config
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  channel       Channel       @relation(fields: [channelId], references: [id], onDelete: Cascade)
  prerollMarker Scte35Marker? @relation(fields: [prerollMarkerId], references: [id], onDelete: SetNull)

  @@index([channelId])
  @@index([type])
  @@index([isActive])
}

enum DistributorType {
  HLS_MPD
  SRT
}

model Schedule {
  id             String   @id @default(uuid())
  channelId      String
  userId         String
  name           String
  description    String?
  startTime      DateTime
  endTime        DateTime
  isRecurring    Boolean  @default(false)
  recurrenceRule String?
  playlist       Json?
  metadata       Json?
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([channelId])
  @@index([userId])
  @@index([startTime, endTime])
  @@index([isActive])
}

model StreamMetrics {
  id         String   @id @default(uuid())
  channelId  String
  timestamp  DateTime @default(now())
  bitrate    Float?
  fps        Float?
  resolution String?
  viewers    Int?
  uptime     Int?
  metadata   Json?

  @@index([channelId])
  @@index([timestamp])
}

model Progress {
  id              String   @id @default(uuid())
  taskId          String   @unique
  currentStep     String
  totalSteps      Int
  currentProgress Int
  message         String?
  metadata        Json?
  lastUpdated     DateTime @default(now())

  @@index([taskId])
  @@index([lastUpdated])
}
